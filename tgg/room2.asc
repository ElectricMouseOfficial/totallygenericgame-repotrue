// room script file

function room_AfterFadeIn() {
    AudioChannel*ac = aIndie_music1.Play(eAudioPriorityNormal, eRepeat);
    aIndie_music1.Play();
    ac.Volume = 50;
}

function room_FirstLoad()
{
  if (!IsGamePaused())
  {
    PauseGame();
    if (IsGamePaused() == 1)
    
    {  
      UnPauseGame();
    }
  }
}

function room_LeaveTop()
{
  cprotag.ChangeRoom(3, 625, 175, eDirectionLeft);
}


function region1_WalksOnto(Region *theRegion)
{
  dDialog1.Start();
  region[1].Enabled = false;
}

function region2_WalksOnto(Region *theRegion)
{
  dDialog2.Start();
  region[2].Enabled = false;
}